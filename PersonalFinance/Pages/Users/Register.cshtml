@page
@model PersonalFinance.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserToRegister.FirstName" class="control-label">First name</label>
                <input asp-for="UserToRegister.FirstName" class="form-control" />
                <span asp-validation-for="UserToRegister.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserToRegister.LastName" class="control-label">Last name</label>
                <input asp-for="UserToRegister.LastName" class="form-control" />
                <span asp-validation-for="UserToRegister.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserToRegister.Email" class="control-label">Email</label>
                <input asp-for="UserToRegister.Email" class="form-control" />
                <span asp-validation-for="UserToRegister.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserToRegister.Password" class="control-label">Password</label>
                <input asp-for="UserToRegister.Password" class="form-control" />
                <span asp-validation-for="UserToRegister.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserToRegister.ConfirmPassword" class="control-label">Confirm password</label>
                <input asp-for="UserToRegister.ConfirmPassword" class="form-control" />
                <span asp-validation-for="UserToRegister.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

