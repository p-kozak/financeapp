@using  PersonalFinance.Domain
@model CustomerBalance

    <div class="row">
        <div class="col-xs-4 col-md-4">
            Currency: @Enum.GetName(typeof(Currency), Model.Currency)
        </div>
        <div class="col-xs-4 col-md-4">
            Balance: @Model.Balance
        </div>
        <div class="col-xs-4 col-md-4">
            <button type ="button" class="btn btn-danger" data-toggle="modal" data-target=@("#modal" + Model.Id.ToString())>Delete</button>
            
        </div>
    </div>

    <div class="modal fade" id=@("modal" + Model.Id.ToString()) tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete balance?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    This action is irreversible
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <form asp-action="Balances" method="post">
                        <input type="hidden" name="balanceId" value="@Model.Id" />
                        <input type="submit" asp-page-handler="CloseBalance" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
